<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <TextBlock Margin="10">Login:</TextBlock>
        <TextBox Name="login" Margin="10,0"></TextBox>

        <TextBlock Margin="10">Password:</TextBlock>
        <TextBox Name="password" Margin="10,0"></TextBox>

        <Button Name="SignIn" Margin="10" Click="SignIn_Click">Войти</Button>
        <Button Name="ShowData" Margin="10" Click="ShowData_Click">Показать данные</Button>
    </StackPanel>
</Window>
